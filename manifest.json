{
    "manifest_version": 3,
    "name": "Zack",
    "version": "1.0",
    "description": "One-click Chrome extension to send and log web pages to Slack and Discord.",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "action": {},
    "background": {
        "service_worker": "background/background.js"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Shift+Z"
            },
            "description": "Zack - Send current page to webhook"
        }
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    },
    "permissions": [
        "activeTab",
        "storage",
        "notifications"
    ]
}
